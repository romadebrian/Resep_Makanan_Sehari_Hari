<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tampilanbg"
    tools:context="id.ac.pradita.resepmakananseharihari.Soto_Ayam_Spesial">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:theme="?android:attr/listViewWhiteStyle">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/soto_ayam" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/bgtext"
                android:gravity="center_vertical|center"
                android:text="Soto Ayam Spesial"
                android:textColor="@android:color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="Bahan Bahan  "
                android:textColor="@android:color/black"
                android:textIsSelectable="false"
                android:textSize="16dp"
                android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="15dp"
            android:background="@android:color/white"
            android:lineSpacingMultiplier="2"
            android:text="
•  1/2 kg ayam kampung \n
•  1/4 kg jeroan ayam \n
•  1/2 kg kentang \n
•  5 telur ayam \n
•  1/4 kg bawang merah buat taburan \n
•  1/4 kg bawang putih buat taburan \n
•  1/4 kg toge kecil \n
•  Seledri \n
•  Jeruk nipis \n
•  Bumbu : \n
•  1/4 kg bawang merah \n
•  1/4 kg bawang putih \n
•  Lengkuas \n
•  Kunyit \n
•  Kemiri \n
•  Jahe \n
•  Serai \n
•  Daun jeruk

"
            android:textColor="@android:color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:text="Langkah Langkah  "
                android:textColor="@color/hitam"
                android:textSize="16dp"
                android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:lineSpacingMultiplier="2"
            android:text="
1.	Bawang merah putih,kunyit,lengkuas,kemiri,jahe halus kan \n
2.	Tumis bersamaan dg serai dan daun jeruk sampai harum \n
3.	Rebus ayam,masukan bumbu yg uda ditumis sampai mendidih \n
4.	Angkat ayam.goreng bersamaan dg jeroan ayam \n
5.	Siap disajikan

"
            android:textColor="@color/hitam" />

        <ImageButton
            android:id="@+id/Youtube_Soto_Ayam_Spesial"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            app:srcCompat="@drawable/vidio" />

    </LinearLayout>
</ScrollView>
</RelativeLayout>
